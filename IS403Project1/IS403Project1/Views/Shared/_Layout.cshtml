<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Prepare to Serve", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Missions", "Index", "Mission")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container" id="contact">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="row" id="contact-box">

                        <h2 class="text-center">
                            <a type="button" href="mailto:joshromo12@gmail.com"><span class="fa fa-envelope"></span></a>
                            <strong>|</strong>
                            <a type="button" href="https://www.linkedin.com/in/josueromo/" target="_blank"><span class="fa fa-linkedin-square"></span></a>
                            <strong>|</strong>
                            <a type="button" href="https://www.facebook.com/josue.romo.902" target="_blank"><span class="fa fa-facebook-square"></span></a>     
                        </h2>
                    </div>
                </div>
            </div>
        </footer>
      
        <footer>
            <div class="col-lg-12 text-center">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
